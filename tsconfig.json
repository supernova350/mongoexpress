{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ESNext",
		"lib": ["ESNext"],
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"declarationDir": "dist/types",
		"outDir": "dist/lib",
		"skipLibCheck": true
	},
	"include": ["src"]
}
